<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lay"
        android:minHeight="60dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:minHeight="60dp"
            android:background="@drawable/ract"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Monday" />

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:background="#ffd1d2d4"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="AddSesstion Time "></TextView>

            <TextView
                android:id="@+id/firstSesstion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="3dp"
                android:paddingTop="10dp"
                android:text="AddSesstion Time 1"
                android:visibility="gone"></TextView>
            <View
                android:layout_below="@+id/lay"
                android:layout_width="match_parent"
                android:background="#ffd1d2d4"
                android:visibility="gone"
                android:id="@+id/view"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/secondSesstion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginTop="3dp"

                android:paddingBottom="10dp"
                android:paddingLeft="10dp"


                android:paddingTop="10dp"

                android:text="AddSesstion Time 2"
                android:visibility="gone"></TextView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_below="@+id/lay"
        android:layout_width="match_parent"
        android:background="#ffd1d2d4"
        android:layout_height="0.5dp"/>

</RelativeLayout>
