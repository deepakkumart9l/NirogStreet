<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4edf0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.app.nirogstreet.circularprogressbar.CircularProgressBar
        android:id="@+id/scroll"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir"
        android:padding="8dp"

        android:visibility="gone"
        app:cpb_colors="@array/gplus_colors" />

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/cardbluebackground"
        android:gravity="left">

        <include layout="@layout/back_arrow" />

        <!--<Button-->
        <!--android:id="@+id/searchButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:background="@null"-->
        <!--android:text="Search"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="16sp"-->
        <!--android:textStyle="normal" />-->

        <TextView
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/actionbar_icon_margin"
            android:layout_toRightOf="@+id/back"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:src="@drawable/search"
            android:text="Likes"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/actionbar_icon_margin"
            android:layout_marginRight="@dimen/actionbar_icon_margin"
            android:layout_toLeftOf="@id/searchButton"
            android:layout_toRightOf="@id/back"
            android:background="@null"
            android:cursorVisible="true"
            android:hint=""
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#88ffffff"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/searchLayout"
        android:background="#e4edf0" />

    <LinearLayout
        android:id="@+id/no_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="116dp"
            android:layout_height="108dp"
            android:src="@drawable/no_noti" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="3.4sp"
            android:text="No Notification yet !"
            android:textColor="#b7b7b7"
            android:textSize="11.3sp" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrol"
        android:layout_width="match_parent"
        android:layout_below="@+id/searchLayout"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/first"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Group Request"
                        android:id="@+id/name"
                        android:textColor="#a3a3a3"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_draw"

                      android:textSize="10sp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="3dp"
                        android:layout_toRightOf="@+id/name"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp"
                        android:layout_marginTop="12dp"
                        android:text="1"
                        android:textColor="@color/white" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:paddingRight="20dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="1dp"
                android:scrollbars="vertical" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>