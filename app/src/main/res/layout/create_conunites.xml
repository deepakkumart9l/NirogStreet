<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/cardbluebackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="8dp"

                android:src="@drawable/back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/degree_la"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textcolorgray"

                app:passwordToggleTint="#000">

                <EditText
                    android:id="@+id/community_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:textSize="16dp"
                    android:backgroundTint="@color/textcolorgray"
                    android:drawableTint="@color/textcolorgray"
                    android:hint="Community Name:"
                    android:paddingBottom="15dp"
                    android:inputType="textCapWords|textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/clg_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textcolorgray"
                app:passwordToggleTint="#000">

                <EditText
                    android:id="@+id/add_people"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    android:layout_marginBottom="10dip"
                    android:backgroundTint="@color/textcolorgray"
                    android:drawableTint="@color/textcolorgray"
                    android:hint="Add Members:"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/sepcialization_la"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textcolorgray"
                android:visibility="gone"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000">

                <EditText
                    android:id="@+id/sepcialization"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:backgroundTint="@color/textcolorgray"
                    android:drawableTint="@color/textcolorgray"
                    android:hint="Specialization"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/year_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textcolorgray"
                app:passwordToggleEnabled="true"

                app:passwordToggleTint="#000">

                <EditText
                    android:id="@+id/note"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:backgroundTint="@color/textcolorgray"
                    android:drawableTint="@color/textcolorgray"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    android:hint="Write a note to include in your invite (Optional):"
                    android:inputType="textCapWords|textCapSentences"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/description_lay"
                android:layout_width="match_parent"
                android:textColorHint="@color/textcolorgray"
                app:passwordToggleEnabled="true"

                android:layout_height="wrap_content"
                app:passwordToggleTint="#000">

                <EditText
                    android:id="@+id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:backgroundTint="@color/textcolorgray"
                    android:drawableTint="@color/textcolorgray"
                    android:paddingBottom="15dp"
                    android:textSize="16dp"
                    android:hint="Description:"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Select Privacy:"
                android:visibility="gone"
                android:textColor="@color/textcolorgray" />


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/titleLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_marginLeft="-7dp"
                android:paddingLeft="2dp"
                android:layout_marginRight="2dp"
                android:backgroundTint="@color/textcolorgray"
                android:drawableTint="@color/textcolorgray"

                app:ms_arrowColor="@color/textcolorgray"
                app:ms_baseColor="@color/textcolorgray"
                app:ms_floatingLabelColor="@color/textcolorgray"
                app:ms_hintColor="@color/textcolorgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_image"
                android:paddingLeft="2dp"
                android:layout_marginTop="10dp"
                android:textSize="16dp"

                android:text="Add group Image:"
                android:textColor="@color/textcolorgray" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="3dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/add_"></ImageView>

        </LinearLayout>
    </ScrollView>


    <com.app.nirogstreet.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir"
        android:padding="8dp"
        android:visibility="gone"
        app:cpb_colors="@array/gplus_colors" />

</RelativeLayout>