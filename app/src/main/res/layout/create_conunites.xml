<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/cardbluebackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="8dp"

                android:src="@drawable/back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="13.5sp"
                android:text="Community Name :"

                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/community_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"

                android:drawableTint="@color/textcolorgray"
                android:hint="Community Name"
                android:inputType="textCapWords|textCapSentences"
                android:maxLines="1"
                android:padding="13dp"
                android:textSize="15dp"
                android:background="@drawable/round_edittext"

                android:textColor="@color/black"
                android:textColorHint="@color/textcolorgray"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="13.5sp"
                android:text="Add Members :"

                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />


            <EditText
                    android:id="@+id/add_people"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:drawableTint="@color/textcolorgray"
                    android:focusable="false"
                    android:hint="Add Members"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:padding="13dp"
                    android:textSize="15dp"
                    android:background="@drawable/round_edittext"                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray"
                     />



            <android.support.design.widget.TextInputLayout
                android:id="@+id/sepcialization_la"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/textcolorgray"
                android:visibility="gone"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#000">

                <EditText
                    android:id="@+id/sepcialization"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:backgroundTint="@color/textcolorgray"
                    android:drawableTint="@color/textcolorgray"
                    android:hint="Specialization"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="13.5sp"
                android:text="Invitation Note :"

                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />


            <EditText
                    android:id="@+id/note"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:drawableTint="@color/textcolorgray"
                    android:hint="Write a note to include in your invite (Optional):"
                    android:inputType="textCapWords|textCapSentences"
                    android:maxLines="1"
                android:padding="13dp"
                android:textSize="15dp"
                android:background="@drawable/round_edittext"                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray"
                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="13.5sp"
                android:text="Description :"

                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />


            <EditText
                    android:id="@+id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                android:padding="13dp"
                android:textSize="15dp"
                android:background="@drawable/round_edittext"                    android:drawableTint="@color/textcolorgray"
                    android:hint="Description:"
                    android:inputType="text|textNoSuggestions"
                    android:maxLines="5"
                    android:paddingBottom="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textcolorgray"
                     />

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Select Privacy:"
                android:textColor="@color/textcolorgray"
                android:visibility="gone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="13.5sp"
                android:text="Select Category :"

                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />
        <LinearLayout
            android:id="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textView"

            android:background="@drawable/round_edittext">

            <Spinner
                android:id="@+id/titleLay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/profile"
                android:layout_marginLeft="-7dp"
                android:layout_marginRight="2dp"
                android:backgroundTint="@color/textcolorgray"
                android:drawableTint="@color/textcolorgray"
                android:paddingLeft="2dp"

            />
</LinearLayout>
            <TextView
                android:id="@+id/add_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="Add group Image:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="13.5sp"

                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/add_image_icon"></ImageView>

        </LinearLayout>
    </ScrollView>


    <com.app.nirogstreet.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir"
        android:padding="8dp"
        android:visibility="gone"
        app:cpb_colors="@array/gplus_colors" />

</RelativeLayout>