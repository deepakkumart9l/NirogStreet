<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Login"
                android:textColor="#000"
                android:textSize="33.5sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xxx"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Id/Phone No."
                    android:textColor="#000"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_edittext"
                    android:imeOptions="actionNext"

                    android:cursorVisible="true"
                    android:hint="Email/Phone"
                    android:inputType="textEmailAddress"
                    android:padding="13dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000"
                    android:textColorHint="#9d9d9d"
                    android:textCursorDrawable="@drawable/blackpipe"
                    android:textSize="14sp"
                    android:textStyle="normal">

                    <requestFocus />
                </EditText>

                <View
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_above="@+id/btnJoin"
                    android:layout_alignParentLeft="true"
                    android:background="#ffffff" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Password"
                        android:textColor="#000"

                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/loginWithOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Login With OTP"
                        android:textColor="@color/cardbluebackground"
                        android:textSize="13sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_edittext"
                    android:orientation="horizontal"
                    android:padding="13dp">

                    <EditText
                        android:id="@+id/passEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:hint="Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword|textNoSuggestions"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#000"
                        android:textColorHint="#9d9d9d"
                        android:textCursorDrawable="@drawable/blackpipe"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <ImageButton
                        android:id="@+id/img_lock"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/lock"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <TextView
                    android:id="@+id/forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:gravity="center|right"
                    android:text="Forgot Password?"
                    android:textAllCaps="false"
                    android:textColor="#24acda"
                    android:textSize="13.5sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/loginTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/round_green"
                        android:padding="13dp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="13.5dp"
                        android:textStyle="normal" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/registerHere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="3dp"
                        android:background="@null"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:text="Don't have an account?"
                        android:textAllCaps="false"
                        android:textSize="13.5sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:background="@null"
                            android:gravity="left"
                            android:paddingRight="15dp"
                            android:text="Register"
                            android:textAllCaps="false"
                            android:textColor="#24acda"
                            android:textSize="13.5sp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="-2dp"
                            android:background="#24acda" />

                    </LinearLayout>


                </LinearLayout>

                <!-- <ImageButton
                android:id="@+id/imgbtnLoginFacebook"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/fb" />-->

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <com.app.nirogstreet.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir"
        android:padding="8dp"
        android:visibility="gone"
        app:cpb_colors="@array/gplus_colors" />
</RelativeLayout>