<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/cardbluebackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:padding="8dp"

                android:src="@drawable/back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title_side_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:paddingTop="@dimen/padding_10"
                android:text="Refer &amp; Invite"
                android:textColor="@color/white"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/addualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="18dp"
                android:paddingTop="@dimen/padding_10"
                android:text="Qualifications"
                android:textColor="@color/white"
                android:textSize="16sp"

                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/txt"
        android:layout_below="@+id/header"
        android:padding="15dp"
        android:lineSpacingExtra="4.5sp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
android:text="Invite your peers &amp; make them part of the  ever-growing community of Ayurveda doctors"        />
    <ImageView
        android:layout_width="262dp"
        android:id="@+id/img"
        android:layout_below="@+id/txt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/graphic"
        android:layout_height="159dp" />
    <LinearLayout
        android:id="@+id/share_ettiquets"
        android:layout_width="192dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:background="@color/buttonBackground"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgshare"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/vector_smart_object" />
        <TextView
            android:id="@+id/txt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="Share Now"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="13.5sp" />




    </LinearLayout>


</RelativeLayout>