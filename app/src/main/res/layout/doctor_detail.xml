<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/cardbluebackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="8dp"

                android:src="@drawable/back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title_side_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="18dp"
                android:paddingTop="@dimen/padding_10"
                android:text=""
                android:textColor="@color/white"

                android:textSize="16sp" />


        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:background="@color/cardbluebackground">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:mk="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/pro"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:src="@color/textcolorgray"
                    mk:border_color="@color/textcolorgray"
                    mk:border_width="1dp" />
                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/placeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameTv"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="160dp"
                android:background="@color/white"
                android:padding="20dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgPublic_icon"
                            android:layout_width="20dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/specilization"

                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/QualificationTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgPublic_icon"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/editInfo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"
                            android:src="@drawable/edit" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/mail_icon"
                            android:layout_width="20dp"
                            android:paddingLeft="4dp"
                            android:src="@drawable/work_experience"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/yearOfExperienceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/mail_icon"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/birthday_icon"
                            android:layout_width="20dp"
                            android:src="@drawable/birthday"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/yearOfBirthTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/birthday_icon"

                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/webSite_icon"
                            android:layout_width="20dp"
                            android:padding="2dp"
                            android:src="@drawable/web"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/WebTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/webSite_icon"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/phone_icon"
                            android:layout_width="20dp"
                            android:padding="3dp"
                            android:src="@drawable/phione"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/phoneTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/phone_icon"

                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/Email_icon"
                            android:layout_width="20dp"
                            android:padding="3dp"
                            android:src="@drawable/mailid"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/emailTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/Email_icon"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/about_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        >

                        <TextView
                            android:id="@+id/QualificationSectionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a Qualification"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/QualificationSectionEdit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"

                            android:src="@drawable/edit"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/QualificatonLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/SpecializationSectionHeadingTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qualification"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/SpecializationectionEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/SpecializationSectionHeadingTv"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sepcilizationDetailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specilization"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/RegistrationSectionHeadingTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a Registration &amp; Documents"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/RegistrationSectionEdit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"

                            android:src="@drawable/edit"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/regisrtaionLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/clinicAddressHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Add a Clinic"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/clinicAddressEdit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"

                            android:padding="5dp"
                            android:src="@drawable/edit"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/clinicLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/consultaionFees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consultation Fee"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/allTaxes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inclusive of taxes"
                                android:textColor="@color/black"

                                android:textSize="16sp"
                                android:visibility="gone" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        >

                        <TextView
                            android:id="@+id/ExperienceSectionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a Experience"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/ExperinceEdit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"

                            android:src="@drawable/edit"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/experinceLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        >

                        <TextView
                            android:id="@+id/AwardSectionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a Award"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/AwardEdit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"

                            android:src="@drawable/edit"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/awardLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        >

                        <TextView
                            android:id="@+id/MemberShipSectionTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add a Membership"
                            android:textColor="@color/cardbluebackground"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/MemberShipEdit"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"

                            android:src="@drawable/edit"

                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/memberLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorgray" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>


    <TextView
        android:id="@+id/loginTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/buttonBackground"
        android:gravity="center"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:visibility="gone" />

    <com.app.nirogstreet.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cir"
        android:padding="8dp"
        android:visibility="gone"
        app:cpb_colors="@array/gplus_colors" />

</RelativeLayout>